<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="solutions.webdealer.project.wassel.fragments.PasswordReset">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Enter your old password"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/et_oldPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:background="@drawable/edit_text_design"
        android:inputType="textPassword"
        android:textColor="@color/colorBlack"
        android:hint="ENTER OLD PASSWORD"
        android:textColorHint="@color/tw__composer_deep_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Set your new password"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/et_newPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:background="@drawable/edit_text_design"
        android:inputType="textPassword"
        android:textColor="@color/colorBlack"
        android:hint="ENTER NEW PASSWORD"
        android:textColorHint="@color/tw__composer_deep_gray" />

    <EditText
        android:id="@+id/et_confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:background="@drawable/edit_text_design"
        android:inputType="textPassword"
        android:textColor="@color/colorBlack"
        android:hint="CONFIRM PASSWORD"
        android:textColorHint="@color/tw__composer_deep_gray"/>

    <Button
        android:id="@+id/bt_changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/driver_button_design"
        android:text="Change Password" />

</LinearLayout>
